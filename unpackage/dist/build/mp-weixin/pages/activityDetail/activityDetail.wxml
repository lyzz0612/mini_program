<view class="container"><view class="input-section"><text class="label">活动名称</text><input disabled class="input-text" value="{{a}}"/></view><view class="input-section"><text class="label">活动人数上限</text><input disabled class="max-part-input" value="{{b}}"/></view><view class="prize-section"><view class="table-header"><text class="prize-type">次第</text><text class="prize-name">奖品名称</text><text class="prize-num">数量</text></view><block wx:for="{{c}}" wx:for-item="item" wx:key="d"><view class="table-row"><text class="prize-type">{{item.a}}</text><text class="prize-name">{{item.b}}</text><text class="prize-num">{{item.c}}</text></view></block></view><view class="participant-section"><view class="table-header participant-header"><text class="table-cell">参与者名称</text><text class="table-cell">操作</text></view><view wx:for="{{d}}" wx:for-item="item" wx:key="d" class="table-row"><text class="table-cell">{{item.a}}</text><button type="warn" size="mini" class="remove-button" data-index="{{item.b}}" bindtap="{{item.c}}">移除</button></view><view wx:if="{{e}}" class="table-row"><input class="input-text participant-name" placeholder="请输入参与者名称" value="{{f}}" bindinput="{{g}}"/><button size="mini" type="primary" class="add-button" bindtap="{{h}}">添加</button></view></view><view class="input-section"><button class="save-btn" type="warn" bindtap="{{i}}">保存</button><button class="start-btn" type="primary" bindtap="{{j}}">开始博饼</button></view></view>